!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title ORC Accomodation Administration Console
    = stylesheet_link_tag "application", "screen", "datepicker", "facebox", "colorbox"
    = javascript_include_tag :defaults, 'jquery', 'jquery.min', 'jquery_ujs', 'jquery-ui', 'common', 'facebox' , 'jquery.colorboxs', 'jquery.colorbox-min'
    = csrf_meta_tag
  %body
    #header
      #user_nav{:style =>"float:right;"}
        - if current_user
          %span.currentuser= " Hi #{current_user.username.humanize} ! "
          &nbsp;&nbsp;&nbsp;
          = link_to image_tag("logout.png", :class => "logout", :mouseover => "logoutover.png"), logout_path(current_user)
        - else
          = link_to "Register", new_user_path
          = link_to image_tag("login_img.png", :class => "padd20tp"), login_path
      %a{:href => root_path}
        %img.paddlt5.paddtp10{:border => "0", :src => "/images/copny_name_img.png"}/
    #navigation
      = render_navigation
    #contentBody
      = yield