%div
  .paginate_ss
    = will_paginate @participants
  .wrapper_vistors
    .row_hover
      %table{:width=>"980px",:style => "margin-left:15px",:cellpadding=>"0", :cellspacing=>"0"}
        %tbody
          %tr{:style => "background-color: #3A82F1"}
            %td
              &nbsp;
              %b Name
            %td
              %b Age
            %td
              %b Gender
            %td
              %b Address
            %td
              %b Mobile
            %td
              %b Visitor Type
            %td{:colspan => 5}
          - @participants.each do |registration|
            - visitor = registration.visitor
            %tr.datarow
              %td
                &nbsp;
                = link_to visitor.name, visitor_path(visitor.id)
              %td
                = visitor.age
              %td
                = gender(visitor.gender)
              %td
                = visitor.address
              %td
                = visitor.mobile_no
              %td
                = visitor.visitor_type
    .paginate_ss
    = will_paginate @participants

