%div{:class=>"mid_bg_add_visitors text_add_6 padd25bt padd20tp-1", :cellspacing=>"2", :cellpadding=>"2", :border=>"0"}
  -#.div_link
    -#= link_to "Add new Visitor Information", new_visitor_path
  .paginate_visitor
    = will_paginate
    .wrapper_vistors
      .left_column 
        %b Name
      .central-colunm{:align => "center"} 
        %b Age
      .right_column 
        %b Gender
      .col 
        %b Address
      .col2 
        %b Mobile
      .col3 
        %b Visitor Type
      .show_index_visitors
      .edit_index_visitors
      .delete_index_visitors
      .spacer
  - @visitors.each do |visitor|
    .wrapper_vistors
    .left_column= visitor.name
    .central-colunm{:align => "center"}= visitor.age
    .right_column= gender(visitor.gender)
    .col= visitor.address
    .col2= visitor.mobile_no
    .col3= visitor.visitor_type
    .show_index_visitors= link_to "checkin", new_checkin_path(:visitor_id => visitor.id)
    .edit_index_visitors= link_to "edit", edit_visitor_path(visitor.id)
    .delete_index_visitors= link_to "delete", visitor_path(visitor.id), :method => :delete
    .spacer
    = will_paginate

