= javascript_include_tag 'checkin'
= form_for @checkin do |f|
  // need this dummy form fields so that visitor details are passed on to the create checkin
  = f.label :visitor, 'Visitor', :hidden => true
  = f.text_field :visitor_id, :hidden =>true
  %br
  = f.label :no_of_days, 'No. of Days'
  = f.number_field :no_of_days 
  %br
  = f.label :event, 'Event'
  = select :checkin, :event_id, @event_list.collect { |e| [e.name, e.id]} 
  %br
  = f.label :building, 'Building'
  = select :room, :building_id, @building_list.collect { |e| [e.name, e.id]} 
  %br
  = f.label :room, 'Room'
  = select :checkin, :room_id ,{ include_blank: true}  
  %br
  .rooms_result

  
  = submit_tag 'Create'

