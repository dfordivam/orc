%div{:class=>"mid_bg_add_users text_add_6 padd25bt padd20tp-1", :cellspacing=>"2", :cellpadding=>"2", :border=>"0"}
  .div_link
    = link_to "Add new User", new_user_path
  .paginate_user
    = will_paginate
    .wrapper_vistors
      %table{:width=>"70%"}
        %tbody
          %tr
            %td{:align => "left"}
              -#.left_column_user
              %b &nbsp;&nbsp;&nbsp; UserName
            %td
              -#.central-colunm-user{:align => "left"}
              %b &nbsp;&nbsp;&nbsp; Email
            %td
              .right_column_user
                %b Role
            %td
              .edit_index
            %td
              .delete_index
            %td
              .spacer
          %tr
            - @users.each do |user|
              .wrapper_vistors
                %tr
                  %td
                    -#.left_column_user
                    &nbsp;&nbsp;&nbsp;
                    = user.username
                  %td
                    -#.central-colunm-user{:align => "center"}
                    &nbsp;&nbsp;&nbsp;
                    = user.email
                  %td{:width=>"40"}
                    .right_column_user= user.role.rolename
                  %td{:width=>"20px",:align=>"center"}
                    -#.edit_index
                    = link_to "edit", edit_user_path(user)
                  %td{:width=>"40px",:align=>"center"}
                    -#.delete_index
                    = link_to "delete", user_path(user), :method => :delete, :confirm => "Are you sure to delete user #{user.username} ?"
                  %td
                    .spacer