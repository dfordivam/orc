%div{:class=>"show_page text_add_6 padd25bt padd20tp-1", :cellspacing=>"2", :cellpadding=>"2"}
  %table{:class => "table-structure_show_page", :cellpadding=>"10", :cellspacing=>"10", :border=>0}
    %tbody
      %tr
        %td{:colspan => 3,:height => "40px"}
          .header_font
            - visitor = @registration.visitor
            = "Registration details for #{@registration.visitor.name.humanize}"
        %td{:align => "right"}
          = link_to button_to(" Go Back "),registrations_path, :method => "get", :title => "Go back to list"
      %tr
        %td{:colspan => 4}
          %hr
      %tr
        %td
          %b= label :name, 'Name'
        %td
          = text_field_tag 'name', visitor.name.upcase, :disabled => true, :class => 'text_feld_area_show_page'
        %td
          %b= label :age, 'Age (Yrs)'
        %td
          = text_field_tag 'age', visitor.age, :disabled => true, :class => 'text_feld_area_show_page'
      %tr
        %td
          %b= label :gender, 'Gender'
        %td
          = text_field_tag 'gender', visitor.gender, :disabled => true, :class => 'text_feld_area_show_page'
        %td
          %b= label :address, 'Address'
        %td
          = text_field_tag 'address', visitor.address, :disabled => true, :class => 'text_feld_area_show_page'
      %tr
        %td
          %b= label :mobile_no, 'Mobile'
        %td
          = text_field_tag 'mobile_no', visitor.mobile_no, :disabled => true, :class => 'text_feld_area_show_page'
        %td
          %b= label :visitor_type, 'Visitor Type'
        %td
          = text_field_tag 'visitor_type', visitor.visitor_type, :disabled => true, :class => 'text_feld_area_show_page'
      %tr
        %td
          %b= label :event, 'Event'
        %td
          = text_field_tag 'event', @registration.event.name, :disabled => true, :class => 'text_feld_area_show_page'
      %tr
        %td{:colspan => 4}
          %hr
          %hr
      - if @registration.id != 0
        %tr 
          %td{:align => "center",:colspan => 5}
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            %b Registration Details
            %hr
            %hr
        %tr          
          %td
            &nbsp;
            %b Accompanied Visitor
          %td
            %b Gender
          %td
            %b Visitor Type
          %td{:colspan => 5}
        - @accompany_visitors.each do |accompany_visitor|
          - registration = accompany_visitor.registration
          %tr.datarow
          %td
            &nbsp;
            = accompany_visitor.name
          %td
            = accompany_visitor.gender
          %td
            = accompany_visitor.visitor_type
